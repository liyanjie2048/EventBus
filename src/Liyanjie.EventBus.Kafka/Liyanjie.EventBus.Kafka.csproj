        <PackageReference Include="Polly" Version="7.2.2" />
        <PackageReference Include="System.Text.Json" Version="5.0.0" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\Liyanjie.EventBus\Liyanjie.EventBus.csproj" />
    </ItemGroup>

</Project>
